//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------


//- Main variables
block variables
  - var title         = "Etape3 Contrat - Code de sécurité"
  - var page          = "tel"
  - var bodyClass     = ""
  - var description   = "Module étape 3"
  - var noHeaderFooter = true
  //- var headerLight   = true
  - var footerLight   = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/tel.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  #telv3.c-headerLightPush
    +headerLight
    +timeLine({
      type:  "progressBar",
      currentStep: 3,
      stepWording: ['Critères', 'Offres', 'Souscription', 'Validation']
    })

    +stickyDock

    div(data-e-sticky-container="floatingMenu" data-e-side-menu-wrapper)
      +floatingMenu(
        data-e-sticky='{"container": "floatingMenu", "hAlign": "left"}',
        data-e-side-menu='{"target": "menu-float", "sideContent": "content-float", "classToOpen": "floating-menu-open", "classToClose": "floating-menu-close"}'
      ).u-theme-genBlue
        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-identity',
          text: 'Identité'
        }).is-viewed.u-theme-color.u-theme-color-hover.not-active(disabled)

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-home',
          text: 'Logement'
        }).is-viewed.u-theme-color.u-theme-color-hover.is-active

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-contract',
          text: 'Contrat'
        }).not-active

      div(data-e-side-menu-content='content-float')
        .l-wrapper--medium
          h2.u-heading-2.u-textCenter.u-margin-v-40.u-margin-small-v-40 Je signe mes documents

        .l-wrapper--medium
          .u-bg-grey-light.u-textCenter.u-margin-v-40.u-margin-small-v-40.u-padding-a-40
            p Pour signer mon mandat, je reçois un code de sécurité par

            +radioSwitchMat({
              label1: 'Email',
              label2: 'SMS',
              id1:    'email',
              id2:    'sms',
              name:   'mandat',
              theme:  'genBlue'
            }).u-margin-t-10.u-margin-small-t-10

            +pictoBlock({
              iconName: 'icon-contact-mail2',
              mail: true
            }).u-margin-t-40.u-margin-small-t-40
              +inputMat({
                float: true,
                label: 'Email',
                type: "text",
                id: "userEmail",
                name: "userEmail",
                required: true,
                dataValidation: true
              })(data-e-float-label).c-inputMat--float.u-margin-l-30.u-margin-b-20

        .l-wrapper--medium
          .u-bg-grey-light.u-textCenter.u-margin-v-40.u-margin-small-v-40.u-padding-a-40
            p Pour signer mon mandat, je reçois un code de sécurité par

            +radioSwitchMat({
              label1: 'Email',
              label2: 'SMS',
              id1:    'email1',
              id2:    'sms1',
              name:   'mandat2',
              theme:  'genBlue'
            }).u-margin-t-10.u-margin-small-t-10

            +pictoBlock({
              iconName: 'icon-phone2',
              mail: true
            }).u-margin-t-40.u-margin-small-t-40
              +inputMat({
                float: true,
                label: 'Téléphone',
                type: "text",
                id: "userEmail",
                name: "userEmail",
                required: true,
                dataValidation: true
              })(data-e-float-label).c-inputMat--float.u-margin-l-30.u-margin-b-20

        .l-wrapper--medium
          +btnWrapper().u-theme-jadeGreen.c-btnWrapper--fullOnMobile.u-margin-v-40.u-margin-small-v-40.u-margin-b-20.u-margin-small-b-20
            +baseBtn({
              text: "Recevoir le code",
              button: true
            }).c-baseBtn--large
