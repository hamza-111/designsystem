//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------


//- Main variables
block variables
  - var title         = "Etape3 Contrat - Confirmation code"
  - var page          = "tel"
  - var bodyClass     = ""
  - var description   = "Module étape 3"
  - var noHeaderFooter = true
  //- var headerLight   = true
  - var footerLight   = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/tel.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  #telv3.c-headerLightPush
    +headerLight
    +timeLine({
      type:  "progressBar",
      currentStep: 3,
      stepWording: ['Critères', 'Offres', 'Souscription', 'Validation']
    })

    +stickyDock

    div(data-e-sticky-container="floatingMenu" data-e-side-menu-wrapper)
      +floatingMenu(
        data-e-sticky='{"container": "floatingMenu", "topPositionDefault": 300, "hAlign": "left"}',
        data-e-side-menu='{"target": "menu-float", "sideContent": "content-float", "classToOpen": "floating-menu-open", "classToClose": "floating-menu-close"}'
      ).u-theme-genBlue
        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-identity',
          text: 'Identité'
        }).is-viewed.u-theme-color.u-theme-color-hover.not-active(disabled)

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-home',
          text: 'Logement'
        }).is-viewed.u-theme-color.u-theme-color-hover.is-active

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-contract',
          text: 'Contrat'
        }).not-active

      div(data-e-side-menu-content='content-float')
        .l-wrapper--medium
          h2.u-heading-2.u-textCenter.u-margin-v-40.u-margin-small-v-40 Je signe mes documents

        .l-wrapper--medium
          .u-bg-grey-light.u-textCenter.u-margin-b-40.u-margin-small-b-40.u-padding-v-25

            +pictoBlock({
              iconName: 'icon-thin_check',
              iconClasses: 'u-fontSize-30 u-margin-a-10 u-margin-small-a-0'
            }).u-color-jadeGreen
              .u-textCenter: strong Un code de validation vous a bien été envoyé par SMS

        .l-wrapper--medium
          p.u-textCenter Vérifiez votre boite mail pour voir le code de validation

          +btnWrapper().u-theme-genBlue.c-btnWrapper--fullOnMobile.u-margin-v-40.u-margin-small-v-40
            +baseBtn({
              text: "Consulter le mandat",
              iconRight: "icon-bold-download",
              empty: true
            })

        .l-wrapper--small.u-textCenter
          p: strong Saisissez votre code de sécurité

          +inputMat({
            float: true,
            label: 'Code de sécurité',
            type: "text",
            id: "scurityCode",
            name: "scurityCode",
            required: true,
            dataValidation: true
          })(data-e-float-label).c-inputMat--float

        .l-wrapper--medium
          +btnWrapper().u-theme-jadeGreen.c-btnWrapper--fullOnMobile.u-margin-v-40.u-margin-small-v-40
            +baseBtn({
              text: "Je ne l'ai pas reçu",
              button: true,
              secondary: true,
              countDown: true
            })(disabled data-e-countdown=`{
                "count": 10,
                "autoStart": true
                }`).c-baseBtn--large

            +baseBtn({
              text: "Valider",
              button: true
            }).c-baseBtn--large
