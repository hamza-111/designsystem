    script.
      E.bannerApp = {
        iOS:     'app-id=1104269908',
        Android: 'app-id=com.engie.particuliers'
      }


  body(
    class=bodyClass
  ).u-theme-genBlue
    .l-wrapper.l-wrapper--site#backToTop(data-e-no-scroll)
      //-+bannerApp()

      if (!noHeaderFooter)
        +siteHeaderV3

      main#siteContent.l-wrapper.l-wrapper--mainFull.u-bg-white(
        role="main"
        data-e-sticky-container-main
      )
        //------------------------
        //- Page content goes here
        //------------------------
        block content

      if (!noHeaderFooter)
        +siteFooter()

      if footerLight
        +footerLight

  // COMMON
  script(src="../js/bas/vendors.js")
