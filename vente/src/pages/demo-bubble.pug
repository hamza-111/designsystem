//- Main variables
block variables
  - var title         = "demo-bubble"
  - var page          = "tel"
  - var bodyClass     = ""
  - var description   = "Module Bubble"
  - var noHeaderFooter = true
  //- var headerLight   = true
  - var footerLight   = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/tel.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  #telv3.c-headerLightPush
    +headerLight
    +timeLine({
      type:  "progressBar",
      currentStep: 3,
      stepWording: ['Crit√®res', 'Offres', 'Souscription', 'Validation']
    })
    +promoBanner
    +loginFeedback().is-opened

    +stickyDock

    .c-formStep.u-margin-t-70.u-margin-small-t-40.is-active
      +bubbleList.is-waiting
        +bubble({inputID: 'bubble_1', radioName: 'bubbleList_demo1', picto: 'iconVente-client-yes'})
        +bubble({inputID: 'bubble_2', radioName: 'bubbleList_demo1', picto: 'iconVente-client-no'})
        +bubble({inputID: 'bubble_3', radioName: 'bubbleList_demo1', picto: 'iconVente-client-undefined'})

    .c-formStep
      +bubbleList
        +bubble({inputID: 'bubble_11', radioName: 'bubbleList_demo2', picto: 'iconVente-connect-yes'})
        +bubble({inputID: 'bubble_12', radioName: 'bubbleList_demo2', picto: 'iconVente-connect-no'})

    .c-formStep
      +bubbleList
        +bubble({inputID: 'bubble_21', radioName: 'bubbleList_demo3', picto: 'iconVente-move'})
        +bubble({inputID: 'bubble_22', radioName: 'bubbleList_demo3', picto: 'iconVente-change-offer'})

    .c-formStep
      +bubbleList
        +bubble({inputID: 'bubble_31', radioName: 'bubbleList_demo4', picto: 'iconVente-elec'})
        +bubble({inputID: 'bubble_32', radioName: 'bubbleList_demo4', picto: 'iconVente-gaz'})
        +bubble({inputID: 'bubble_33', radioName: 'bubbleList_demo4', picto: 'iconVente-elec-gaz'})

    .c-formStep
      +bubbleList
        +bubble({inputID: 'bubble_41', radioName: 'bubbleList_demo5', picto: 'iconVente-house'})
        +bubble({inputID: 'bubble_42', radioName: 'bubbleList_demo5', picto: 'iconVente-appart'})
