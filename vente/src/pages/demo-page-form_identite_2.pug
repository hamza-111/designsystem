//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------


//- Main variables
block variables
  - var title         = "Démo étape3 : Formulaire d'identité"
  - var page          = "tel"
  - var bodyClass     = ""
  - var description   = "Module étape 3"
  - var noHeaderFooter = true
  //- var headerLight   = true
  - var footerLight   = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/tel.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  #telv3.c-headerLightPush
    +headerLight
    +timeLine({
      type:  "progressBar",
      currentStep: 3,
      stepWording: ['Critères', 'Offres', 'Souscription', 'Validation']
    })

    +stickyDock

    div(data-e-sticky-container="floatingMenu" data-e-side-menu-wrapper)

      +floatingMenu(
        data-e-sticky='{"container": "floatingMenu", "topPositionDefault": 300, "hAlign": "left"}',
        data-e-side-menu='{"target": "menu-float", "sideContent": "content-float", "classToOpen": "floating-menu-open", "classToClose": "floating-menu-close"}'
      ).u-theme-genBlue
        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-identity',
          text: 'Identité'
        }).is-viewed.u-theme-color.u-theme-color-hover.not-active(disabled)

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-home',
          text: 'Logement'
        }).is-viewed.u-theme-color.u-theme-color-hover.is-active

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-contract',
          text: 'Contrat'
        }).not-active

      .l-wrapper--large.u-padding-a-0(data-e-side-menu-content='content-float')
        .c-formStep.is-active
          +bubbleList({
            title: 'Faisons connaissance...'
          })
            +bubble({inputID: 'bubble_1', radioName: 'bubbleList_demo1', picto: 'iconVente-woman', text: 'Madame'})
            +bubble({inputID: 'bubble_2', radioName: 'bubbleList_demo1', picto: 'iconVente-man', text: 'Monsieur'})
            +bubble({inputID: 'bubble_3', radioName: 'bubbleList_demo1', picto: 'iconVente-multiple-persons', text: 'Co-titulaires'})

        .c-formStep
          .l-wrapper--medium
            .c-column.c-column--50-50.c-column--spaced
              .c-column__col
                h3.u-heading-3.u-margin-b-10.u-margin-small-b-10 Titulaire
                +miniBubbleList()
                  +miniBubble({
                    text: 'Madame',
                    inputID: 'madame',
                    radioName: 'gender',
                    picto: 'iconVente-woman'
                  })
                  +miniBubble({
                    text: 'Monsieur',
                    inputID: 'monsieur',
                    radioName: 'gender',
                    picto: 'iconVente-man'
                  })
                .l-wrapper--small
                  +inputMat({
                    float: true,
                    label: 'Prénom',
                    type: "text",
                    id: "givenName",
                    name: "givenName",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

                  +inputMat({
                    float: true,
                    label: 'Nom',
                    type: "text",
                    id: "familyName",
                    name: "familyName",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

                  +inputMat({
                    float: true,
                    label: 'Email',
                    type: "email",
                    id: "email",
                    name: "email",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

                  +inputMat({
                    float: true,
                    label: 'Téléphone',
                    type: "tel",
                    id: "phone",
                    name: "phone",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

                  +inputMat({
                    float: true,
                    label: 'Référence client (optionnel)',
                    type: "text",
                    id: "customerRef",
                    name: "customerRef",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

              .c-column__col
                h3.u-heading-3.u-margin-b-10.u-margin-small-b-10 Co-titulaire
                +miniBubbleList()
                  +miniBubble({
                    text: 'Madame',
                    inputID: 'madame2',
                    radioName: 'gender2',
                    picto: 'iconVente-woman'
                  })
                  +miniBubble({
                    text: 'Monsieur',
                    inputID: 'monsieur2',
                    radioName: 'gender2',
                    picto: 'iconVente-man'
                  })
                .l-wrapper--small
                  +inputMat({
                    float: true,
                    label: 'Prénom',
                    type: "text",
                    id: "givenName",
                    name: "givenName",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

                  +inputMat({
                    float: true,
                    label: 'Nom',
                    type: "text",
                    id: "familyName",
                    name: "familyName",
                    required: true,
                    dataValidation: true
                  })(data-e-float-label).c-inputMat--float

          .l-wrapper--medium
            +btnWrapper().u-theme-jadeGreen.c-btnWrapper--fullOnMobile.u-margin-v-40.u-margin-small-v-40
              +baseBtn({
                text: "Continuer",
                button: true
              }).c-baseBtn--large
