//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------


//- Main variables
block variables
  - var title         = "Etape3 Contrat - Signature mandat"
  - var page          = "tel"
  - var bodyClass     = ""
  - var description   = "Module étape 3"
  - var noHeaderFooter = true
  //- var headerLight   = true
  - var footerLight   = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/tel.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  #telv3.c-headerLightPush
    +headerLight
    +timeLine({
      type:  "progressBar",
      currentStep: 4,
      stepWording: ['Critères', 'Offres', 'Souscription', 'Validation']
    })

    +stickyDock

    div(data-e-sticky-container="floatingMenu" data-e-side-menu-wrapper)

      +floatingMenu(
        data-e-sticky='{"container": "floatingMenu", "topPositionDefault": 300, "hAlign": "left"}',
        data-e-side-menu='{"target": "menu-float", "sideContent": "content-float", "classToOpen": "floating-menu-open", "classToClose": "floating-menu-close"}'
      ).u-theme-genBlue
        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-identity',
          text: 'Identité'
        }).is-viewed.u-theme-color.u-theme-color-hover.not-active(disabled)

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-home',
          text: 'Logement'
        }).is-viewed.u-theme-color.u-theme-color-hover.is-active

        +floatingMenuListButton({
          iconVente: true,
          iconName: 'iconVente-contract',
          text: 'Contrat'
        }).not-active

      div(data-e-side-menu-content='content-float')
        .l-wrapper--medium
          h2.u-heading-2.u-textCenter.u-margin-v-40.u-margin-small-v-40 Je signe mes documents

        .l-wrapper--medium
          .u-bg-grey-light.u-textCenter.u-margin-b-40.u-margin-small-b-40.u-padding-v-25

            +pictoBlock({
              iconName: 'icon-thin_check',
              iconClasses: 'u-fontSize-30 u-margin-a-10 u-margin-small-a-0'
            }).u-color-jadeGreen
              .u-textCenter: strong Votre mandat a bien été signé

        .l-wrapper--medium
          p.u-textCenter: strong Pour finir, je prends connaissance de mon contrat et je le signe en ligne

        .l-wrapper--medium
          .u-margin-v-40.u-margin-small-v-40.u-theme-genBlue
            +checkboxMat({
              label: "J'ai pris connaissance des Conditions particulières de vente et de leur(s) annexe(s) et je les accepte",
              id: 'cpv'
            })

            +btnWrapper().u-theme-genBlue.c-btnWrapper--fullOnMobile.c-btnWrapper--alignLeft.c-checkboxMat__labelPadding.u-margin-b-40.u-margin-small-b-40.u-margin-t-10.u-margin-small-t-10
              +baseBtn({
                text: "Visualiser",
                iconRight: "icon-eye",
                empty: true
              })
              +baseBtn({
                text: "Télécharger",
                iconRight: "icon-bold-download",
                empty: true
              })

            +checkboxMat({
              label: "J'ai pris connaissance des Conditions Générales de vente et de leur(s) annexe(s) et je les accepte",
              id: 'cgv'
            })

            +btnWrapper().u-theme-genBlue.c-btnWrapper--fullOnMobile.c-btnWrapper--alignLeft.c-checkboxMat__labelPadding.u-margin-b-40.u-margin-small-b-40.u-margin-t-10.u-margin-small-t-10
              +baseBtn({
                text: "Visualiser",
                iconRight: "icon-eye",
                empty: true
              })
              +baseBtn({
                text: "Télécharger",
                iconRight: "icon-bold-download",
                empty: true
              })


        .l-wrapper--medium.u-padding-t-40
          h2.u-heading-2.u-textCenter.u-margin-b-20.u-margin-small-b-20 Je signe un nouveau contrat

        .l-wrapper--small
          +inputMat({
            float: true,
            label: 'Nom du signataire',
            type: "text",
            id: "appliantName",
            name: "appliantName",
            required: true,
            dataValidation: true
          })(data-e-float-label).c-inputMat--float


        .l-wrapper--medium.u-padding-t-20
          +btnWrapper().u-theme-jadeGreen.c-btnWrapper--fullOnMobile.u-margin-v-40.u-margin-small-v-40
            +baseBtn({
              text: "Valider",
              button: true
            })(disabled).c-baseBtn--large
