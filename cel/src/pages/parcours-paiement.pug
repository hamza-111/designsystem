//- Main variables
block variables
  - var title           = "Parcours de paiement"
  - var page            = "app"
  - var bodyClass       = ""
  - var description     = ""
  - var noHeaderFooter  = true
  - var headerCel       = 'tunnel'
  - var wrapperSite     = "l-wrapper--site"
