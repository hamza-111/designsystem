//- JS only for that page
block JS


//- Page content
block content
  #cel.c-headerLightCelPush.u-margin-small-t-35
    .l-wrapper--large
      .l-wrapper--medium.u-textCenter
        +headSection({
          title: "Payer votre Facture",
          noLink: true
        })

      +payBillFrame({
        url : "_ifram-SelectCardOneClick.html"
      })
      +payBillFrame({
        url : "_ifram-EnterCardDataFilled.html"
      })
      +payBillFrame({
        url : "_ifram-EnterCardDataOneClick.html"
      })
      +payBillFrame
      +payBillFrame({
        url : "_ifram-AddNewCardToWallet.html"
      })

    .l-wrapper--huge
      +btnWrapper.c-btnWrapper--alignLeft.u-margin-t-40.u-margin-small-t-40.u-theme-green
        +baseBtn({
          text: "Retour",
          iconLeft: "icon-chevron-left",
          empty: true
        })
