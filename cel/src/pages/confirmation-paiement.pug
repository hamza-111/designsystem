//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------
include ../../../common/src/components/floatingModal/floatingModal
include ../../../common/src/components/headSection/headSection
include ../../../common/src/components/assuranceBand/assuranceBand
include ../../../common/src/components/legalMention/legalMention
include ../../../common/src/components/pictoBlock/pictoBlock
include ../../../common/src/components/selectOptions/selectOptions

//- Main variables
block variables
  - var title           = "Confirmation de paiement"
  - var page            = "app"
  - var bodyClass       = ""
  - var description     = ""
  - var noHeaderFooter  = true
  - var headerCel       = 'connected'
  - var wrapperSite     = "l-wrapper--site"
  - var footerLightFull = true

//- JS only for that page
block JS


//- Page content
block content
  #cel.c-headerLightCelPush.u-margin-small-t-35

    .l-wrapper--large
      .l-wrapper--medium.u-textCenter
        +headSection({
          title: "Merci Stéphane&nbsp;!",
          noLink: true
        })
        p.u-textBold Votre demande a bien été prise en compte

        p.u-margin-t-40.u-margin-small-t-40
          | Le solde de votre facture sera mis à jour dans 48 heures.
          br
          b Vous allez recevoir un e-mail de confirmation à l'adresse suivante :

      .l-wrapper--medium.u-margin-t-20.u-margin-small-t-20
        +pictoBlock({
          iconName:  'icon-contact-mail2',
          topToLeft: true,
          email:     true
        }).is-valid
          p.u-color-grey Email
          p
            b johndoe@wanadoo.com

      .c-column.c-column--vCenter.c-column--33-33-33.u-bg-grey-light.u-padding-a-30.u-margin-t-40.u-margin-small-t-40
        .c-column__col
          p.u-margin-small-a-20 <strong>Facture de mai 2017&nbsp;: 65,90€ TTC</strong>
        .c-column__col
          p.u-margin-small-a-20 Visa Valentin ********5086
        .c-column__col
          +btnWrapper.u-margin-small-t-40.u-theme-green
            +baseBtn({
              text: "Télécharger la confirmation",
              iconRight: "icon-bold-download",
              empty: true
            })

      .l-wrapper--medium
        h2.u-heading-3.u-textCenter.u-margin-t-40.u-margin-small-t-40 Découvrez le service

      +selectOptions({
        noTheme: true
      }).u-margin-t-30.u-margin-small-t-30
        +selectOptionBlock({
          fontIcon: "icon-mensualisation",
          textButton: "Mensualiser mes paiements"
        })
          h3.c-selectOptionBlock__title.u-heading-3.u-margin-b-10.u-theme-color Prélèvement automatique
          p Opter pour la tranquilité avec le prélèvement automatique <b>mensuel</b>, plus de paiement à envoyer !

    .l-wrapper--huge
      +btnWrapper.c-btnWrapper--alignLeft.u-margin-t-40.u-margin-small-t-40.u-theme-green
        +baseBtn({
          text: "Retour au tableau de bord",
          iconLeft: "icon-chevron-left",
          empty: true
        })
