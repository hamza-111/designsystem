//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------
include ../../../common/src/components/headSection/headSection
include ../../../common/src/components/column/column
include ../../../suiviconso/src/components/alert/alert


//- Main variables
block variables
  - var title = "composant kit Synthese"
  - var page = ""
  - var bodyClass = ""
  - var description = ""
  - var noHeaderFooter = true
  - var demoMode = true

//- JS only for that page
block JS


//- Page content
block content
  h1.u-heading-1.u-textCenter.u-margin-v-40 composant kit tableau de bord V2

  +demo({
    desc : "blockFacture v2"
  })
    +blockFacture


  h1.u-heading-1.u-textCenter.u-margin-v-40 composant kit tableau de bord V1

  h1.u-heading-1.u-textCenter.u-margin-v-40 composant Alert

  +demo({
    desc: "message Alert"
  })
    +alert()

  +demo({
    desc: "message Alert en mode loader"
  })
    +alert({
      spinner: true
    })

  h1.u-heading-1.u-textCenter.u-margin-v-40 composant title pour EC

  +demo({
    desc: `ajouté la class <code>u-hide</code> au spinner ou au composant. blocInfoEC
    <code>u-color-white</code> est la classe a ajouté sur le composant de la page synthese afin que le titre soit en blanc`
  })
    +blocInfoEC({
      loader:true
    })
    +blocInfoEC()

  h1.u-heading-1.u-textCenter.u-margin-v-40 composant blockFacture

  +demo({
    desc : "avec loader"
  })
    +blockFacture({
      theme:  "gab1",
      loader: true
    })

  +demo({
    desc : "avec erreur"
  })
    +blockFacture({
      theme:  "gab1",
      error: true
    })

  +demo({
    desc : "vue cas 1"
  })
    +blockFacture({
      theme: "gab1"
    })

  +demo({
    desc : "vue cas 2"
  })
    +blockFacture({
      theme: "gab2"
    })

  +demo({
    desc : "vue cas 3"
  })
    +blockFacture({
      theme: "gab3"
    })

  +demo({
    desc : "vue cas 4"
  })
    +blockFacture({
      theme: "gab4"
    })

  h1.u-heading-1.u-textCenter.u-margin-v-40 bienvenu dans le monde des miniPUSH (kit)

  +demo({
    desc: "miniPushLink, ajouter la classe <code>c-miniPushLink--orange</code>"
  })
    +miniPushLink({
      theme: "c-miniPushLink--genBlue ",
      titre: "Zéro papier",
      text: "Plus de duplicata avec la facture en ligne!",
      picto: "icon-telecharger-facture"
    })

  +demo({
    desc: "miniPushLink, ajouter la classe <code>c-miniPushLink--green</code>"
  })
    +miniPushLink({
      theme: "c-miniPushLink--coral",
      titre: "Parrainez un proche",
      text: "15€ de remise chacun sur votre facture*",
      picto: "icon-budget3"
    })

  +demo({
    desc: "miniPushLink sans picto"
  })
    +miniPushLink({
      noPicto: true,
      titre:   "Le saviez-vous ?",
      text:    "Nous sommes le 1er fournisseur de gaz en France avec près de 8 millions de clients gaz.",
    })

  +demo({
    desc: "miniPushLink avec Loader"
  })
    +miniPushLink({
      noPicto: true,
      titre:   "Le saviez-vous ?",
      text:    "Nous sommes le 1er fournisseur de gaz en France avec près de 8 millions de clients gaz.",
      loader:  true
    })


  +demo({
    desc: "miniPushTextImage"
  })
    +miniPushTextImage


  +demo({
    desc: "miniPushTextImage avec Loader"
  })
    +miniPushTextImage({
      loader: true
    })

