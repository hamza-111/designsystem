//----------------------
//- DO NOT EDIT
extends pug-partials/base
include ../components/miniPush/miniPush

//----------------------


//- Main variables
block variables
  - var title = "miniPush"
  - var page = ""
  - var bodyClass = ""
  - var description = ""
  - var noHeaderFooter = true
  - var demoMode = true


//- JS only for that page
block JS


//- Page content
block content

  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px; text-align:center;") composant miniPush template
  +demo({
  desc :`composant miniPush NOTE:<br> 
  - theme : contribualble <br>
  - Titre : contribualble <br>
  - SubTitre : contribualble <br>
  - text : contribualble <br>
  - button : contribualble <br>
  - possibilité d'ajouter une image : contribualble <br>
  - la classe <code>.u-radius</code> ajout un effet arrondi sur la miniPush<br>
  - la classe <code>.u-color-white</code> permet de rendre votre text blanc on l'utilise plus sur un fond blanc<br>
  - themeColor : permet de défenir un theme comprenant la couleur de titre et le bouton</br>
  Si l'image est contribuable voir exemple plus bas
  `
  })
    +miniPush({
      theme: 'default'
    })

  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px; text-align:center;") Exemple du minipPush dans des grilles de col 6 et 4
  +demo({
    desc :"Placer le miniPush dans la grille, ici nous avons une gille de col-6 et col-4"
    })
    .l-row
      +miniPush({
        themeColor: "greenPersian"
      }).l-col-medium-6.l-col-small-12
      +miniPush({
        themeColor: "blue"
      }).l-col-medium-6.l-col-small-12
      +miniPush({
        themeColor: "greenMint"
      }).l-col-medium-4.l-col-small-12
      +miniPush({
        themeColor: "orange-baaast"
      }).l-col-medium-4.l-col-small-12    
      +miniPush({
        themeColor: "genBlue"
      }).l-col-medium-4.l-col-small-12        
      +miniPush({
      themeColor: "greenMint",
      img: true,
      imgSmall: 'ecogeste.jpg',
      imgLarge: 'ecogeste.jpg',
      textColor: 'u-color-white',
      themeTitle: 'Mon espace',
      title: 'DÉCOUVREZ LES ECO-GESTES',
      subTitle: 'À ADOPTER AU QUOTIDIEN',
      text: 'Responsabilisez votre Consommation <br> et réduisez votre facture énergétique',
      btn: true,
      imgMobile : true
      }).l-col-medium-12.l-col-small-12  

  +demo({
    desc: `miniPush avec image NOTE : <br>
    SI image présente ALORS ajouter la class <code>c-miniPush__content--img</code> sur l'élément c-miniPush__content`
  })
  .l-row
      .l-col-medium-6
        +miniPush({
          themeColor: "genBlue",
          img: true,
          imgSmall: 'push-fel-desktop.jpg',
          imgLarge: 'ecogeste.jpg',
          textColor: 'u-color-black',
          themeTitle: 'Mon espace',
          title: 'CAPÉCO',
          subTitle: 'CONSO',
          btnTxt : "un boutton",
          themeTextColor : "black",
          imgMobile : true,
          text: 'Je saisis ma conso. <br /> et j’agis sur mon <br/> quoitidien.'
        })

  +demo({
    desc: `miniPush avec image desktop et bkg mobile : <br>
    SI image présente ALORS ajouter la class <code>c-miniPush__content--img</code> sur l'élément c-miniPush__content`
  })
    .l-row
      .l-col-medium-4
        +miniPush({
          themeColor: "genBlue",
          img: true,
          imgSmall: 'capecofake.jpg',
          imgLarge: 'error404-large.jpg',
          textColor: 'u-color-black',
          themeTitle: 'Mon espace',
          title: 'CAPÉCO',
          subTitle: 'CONSO',
          btnTxt : "un boutton",
          themeTextColor : "black",
          imgMobile : false,
          text: 'Je saisis ma conso. <br /> et j’agis sur mon <br/> quoitidien.'
        })    

    
      
  
