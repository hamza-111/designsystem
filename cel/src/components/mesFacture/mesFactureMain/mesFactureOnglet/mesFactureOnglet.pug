                text: 'Couvrez vos dépenses de gaz <br> naturel en cas de difficulté majeure.'
              })
              
            .l-col-medium-6  
              +miniPush({
                themeColor: "blue",
                img: true,
                imgSmall: 'PushecoEnegieWhiteMobile.jpg',
                imgLarge: 'ecoEnergiePush.jpg',
                textColor: 'u-color-black',
                themeTitle: false,
                title: "VOUS BÉNÉFICIEZ D'UN",
