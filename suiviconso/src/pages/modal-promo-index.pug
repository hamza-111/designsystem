        twoCols: true,
        title: "Ranger, classer, archiver&nbsp;...<br/>ça vous fait peur ?",
        imgSmall: "../images/contrib/push-fel-mobile.jpg",
        imgMedium: "../images/contrib/push-fel-desktop.jpg"
