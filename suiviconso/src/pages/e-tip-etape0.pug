//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------

include ../../../common/src/components/textImageBg/textImageBg

//- Main variables
block variables
  - var title          = "paiement en ligne"
  - var page           = "app"
  - var bodyClass      = ""
  - var description    = ""
  - var noHeaderFooter = true
  - var headerCel      = 'title'
  - var footerLight    = true

//- JS only for that page
block JS


//- Page content
block content
  #cel.c-headerLightCelPush.u-margin-small-t-35
    +formMat()(data-e-form-validation='{"switchBtnState": true}').l-wrapper--medium

      .c-radioStyleWrapper
        +radioStyle({
          id: "radioMatStyle",
          name: 'radio',
          titre: 'Nouveaux*',
          submit: true,
          label: 'Etip',
          textLabel: 'Je serai débité le XX/XX/XXXX',
          imgUrl: "e-tip.png",
          required: true,
          dataValidation: {
            validations: {
              valueMissing: ''
            }
          }
        })

        +radioStyle({
          id: "radioMatStyle2",
          name: 'radio',
          submit: true,
          label: 'Carte bancaire',
          textLabel: 'Je serai débité immédiatement',
          imgUrl: "carteBancaire.png",
          required: true,
          dataValidation: {
            validations: {
              valueMissing: ''
            }
          }
        })

      +btnWrapper().u-theme-genBlue.u-margin-t-40.c-btnWrapper--fullOnMobile
        +baseBtn({
          text: 'Suivant',
          button: true
        })(type="submit" data-e-form-validation-submit).c-baseBtn--large

    +textImageBg()