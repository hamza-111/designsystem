//----------------------
//- DO NOT EDIT
extends pug-partials/base
//----------------------


//- Main variables
block variables
  - var title         = "Typo"
  - var page          = ""
  - var bodyClass     = ""
  - var description   = "Typo"
  - var noHeaderFooter = true
  - var demoMode      = true

//- CSS (haut) pour cette page
block CSS
  link(rel="stylesheet" href="../css/vente.css")

//- JS (bas) pour cette page
block JS
  script(src="../js/bas/demo.js")


//- Page content
block content
  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Titres
  +demo({
    desc: ""
  })
    .u-heading-1 u-heading-1
    .u-heading-2 u-heading-2
    .u-heading-3 u-heading-3
    .u-heading-4 u-heading-4


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Alignements
  +demo({
    desc: ""
  })
    .u-textLeft u-textLeft
    .u-textRight u-textRight
    .u-textCenter u-textCenter


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Styles de textes
  +demo({
    desc: ""
  })
    .u-textBold u-textBold
    .u-textNormal u-textNormal
    .u-textItalic u-textItalic
    .u-textUppercase u-textUppercase


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Couleurs de textes
  +demo({
    desc: ""
  })
    .u-textBold
      .u-color-genBlue u-color-genBlue
      .u-color-white.u-bg-black u-color-white
      .u-color-black u-color-black


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Couleurs de background
  +demo({
    desc: ""
  })
    .u-bg-genBlue u-bg-genBlue
    .u-bg-white u-bg-white
    .u-bg-grey-medium u-bg-grey-medium
    .u-bg-grey-light u-bg-grey-light


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Marges "desktop"
  +demo({
    desc: "Ces marges se transforment en 15px sur mobile. Tailles disponibles: 0 - 10 - 15 - 20 - 25 - 30 - 40 - 50 - 60 - 70"
  })
    .u-margin-a-20.u-bg-genBlue u-margin-a-xx (all: tout autour)
    .u-margin-t-20.u-bg-genBlue u-margin-t-xx (top)
    .u-margin-r-20.u-bg-genBlue u-margin-r-xx (right)
    .u-margin-b-20.u-bg-genBlue u-margin-b-xx (bottom)
    .u-margin-l-20.u-bg-genBlue u-margin-l-xx (left)
    .u-margin-v-20.u-bg-genBlue u-margin-v-xx (vertical: top et bottom)
    .u-margin-h-20.u-bg-genBlue u-margin-h-xx (horizontal: left et right)


  h2(style="font-size:2rem;font-weight:bold;margin:10px 0 20px;") Marges "mobile"
  +demo({
    desc: "Ces marges ne fonctionnent QUE sur mobile. Tailles disponibles: 0 - 10 - 15 - 20 - 25 - 30 - 40 - 50 - 60 - 70"
  })
    .u-margin-small-a-30.u-bg-genBlue u-margin-small-a-xx (all: tout autour)
    .u-margin-small-t-30.u-bg-genBlue u-margin-small-t-xx (top)
    .u-margin-small-r-30.u-bg-genBlue u-margin-small-r-xx (right)
    .u-margin-small-b-30.u-bg-genBlue u-margin-small-b-xx (bottom)
    .u-margin-small-l-30.u-bg-genBlue u-margin-small-l-xx (left)
    .u-margin-small-v-30.u-bg-genBlue u-margin-small-v-xx (vertical: top et bottom)
    .u-margin-small-h-30.u-bg-genBlue u-margin-small-h-xx (horizontal: left et right)
