  body.u-theme-genBlue(
    class=bodyClass
    data-e-no-scroll
  )
    .l-wrapper#backToTop(class=wrapperSite)
      //-+bannerApp

      if header || !noHeaderFooter
        +siteHeaderV3

      case headerCel
        when 'full'
          +headerCel.c-sticky(role="banner" data-e-sticky='{"container": "siteHeader", "scrollTop" : true}')
        
        when 'sousMenu'
          +headerCel({
            sousMenu:true,
            gradient : true
          }).c-headerCel--sousMenu.c-sticky(role="banner" data-e-sticky='{"container": "siteHeader", "scrollTop" : true, "sousMenu" : true}')

        when 'TR'
          +headerLightCel({
            hasTitle: "Cr√©ation <br class='u-hideMediumUp'> espace client"
          })
        when 'title'
          +headerLightCel({
            hasTitle: true
          })
        when 'connected'
          +headerLightCel({
            connected: true
          })
        when 'connectedTitle'
          +headerLightCel({
            connected: true,
            hasTitle: true
          })
        when 'tunnel'
          +headerLightCel({
            connected: true,
            hasTitle: true,
            isTunnel: true
          })
        when 'fullGradient'
          +headerCel({
            gradient : true
          })
        when 'etapier'
          +headerCel({
            gradient : true,
            etapier : true
          })          

      main#siteContent.l-wrapper.l-wrapper--mainFull(
        role="main"
        data-e-sticky-container-main
        class=noBg ? "" : "u-bg-white"
        class="l-wrapper--"+main
