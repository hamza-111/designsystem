    script.
      function whichDevice() {
        var osUserAgent = navigator.userAgent;
        if (/iPhone/i.test(osUserAgent)) return 'iOS';

        if (window.screen.width < 768 && /Android/i.test(osUserAgent)) {
          return 'android';
        }

        return 'desktop';
      }

      window.onload = function() {
        var search = window.location.search,
            urls = {
              desktop: "https://particuliers.engie.fr",
              iOS: "engie://activationcel",
              android: "engie://activationcel",
              androidParam: "#blabla then"
            },
            device = whichDevice(),
            redirectLink = document.querySelector('[data-e-redirect-app]');

        if (search.length > 0 && urls[device].indexOf('?') > -1) {
          search = search.replace('?', '&');
        }

        // create right URL
        if (device === 'android') {
          redirectLink.href = urls[device] + search + urls.androidParam;
        } else {
          redirectLink.href = urls[device] + search;
        }

        // iOS or Android
        if (device === 'iOS' || device === 'android' || window.screen.width < 768) {
          redirectLink.style.visibility = 'visible';
          return;
        }

        // others
        window.location.href = urls[device] + search;
      }

