//- Main variables
block variables
  - var title       = "Homepage"
  - var page        = "homepage"
  - var bodyClass   = ""
  - var description = "Ici c'est la homepage !"


//- JS only for that page
block JS



//- Page content
block content
  div(data-e-sticky-container="siteHeader")
    //- +quickAccess2
    +title({
      title:"Les partenaires de médiation solidarité"}).u-margin-t-30


    .l-row.u-padding-h-50.u-padding-b-40
      .l-col-small-12.u-padding-r-40
          p(style="color:#707070; width:100%; padding: 70px; background:#ccc;").u-fontSize-titan.u-textCenter BLOC POUR COMPOSANT AEM TEXT IMAGE

    .l-row.u-padding-h-50.u-padding-b-40.u-bg-grey-light
      
        +formMat()(data-e-form-validation='{"switchBtnState": true}')
        
          .l-col-medium-6.l-push-medium-3
            +inputMat({
              type : 'tel',
              label: 'code postal',
              placeholder: 'Saisissez votre code postal',
              maxlength: 5,
              pattern: "cp",
              dataValidation: {
                validations: {
                  patternMismatch: 'patternMismatch: Format incorrect'
                }
              }
            })

          .l-col-medium-6.l-push-medium-3
            +selectMat({
              label: 'votre ville'
            })


          .l-col-medium-12

            +btnWrapper().u-theme-genBlue.u-margin-v-40.u-margin-small-b-70
              +baseBtn({
                text: 'Submit normal',
                button: true
              })(type="submit" data-e-form-validation-submit).c-baseBtn--large



          .l-col-medium-12.l-col-small-10
            h3.u-fontSize-large  
              strong Dans votre département (2 adresses)
            hr.u-margin-t-15.u-margin-b-0
          
          .l-col-medium-12
            .u-flexBloc
              p(style="color:#707070; width:100%;").u-fontSize-titan.u-textCenter
                b Pas de résultat dans votre département. <br> Consultez les départements limitrophes.
          .l-col-medium-12.l-col-small-10
            h3.u-fontSize-large  
              strong Dans votre département (2 adresses)
            hr.u-margin-t-15.u-margin-b-0
          
          .l-col-medium-12
            .u-flexBloc.u-margin-t-0
              +infoBlock2.u-flexBloc-3.u-flexBloc-md-3
              +infoBlock2.u-flexBloc-3.u-flexBloc-md-3
              +infoBlock2.u-flexBloc-3.u-flexBloc-md-3
              +infoBlock2.u-flexBloc-3.u-flexBloc-md-3


          .l-col-medium-12.l-col-small-10
            h3.u-fontSize-large  
              strong Dans les départements limitrophes (4 adresses)
            hr.u-margin-t-15.u-margin-b-0
      
          .l-col-medium-12
            .u-flexBloc.u-margin-t-0
