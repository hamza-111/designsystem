include ../../components/siteHeaderV2/siteHeaderV2
include ../../components/backToTop/backToTop
include ../../components/siteFooter/siteFooter
include ../../components/siteFooterV2/siteFooter
include ../../components/breadcrumb/breadcrumb
include ../../components/btnWrapper/btnWrapper
include ../../components/btnWrap/btnWrap

//---------------------------
//- Global template variables
//---------------------------
block variables

- if (typeof bodyClass === "undefined")       bodyClass       = ""
- if (typeof theme === "undefined")           theme           = "u-theme-genBlue"
- if (typeof title === "undefined")           title           = ""
- if (typeof page === "undefined")            page            = ""
- if (typeof description === "undefined")     description     = ""
- if (typeof localhostCommon === "undefined") localhostCommon = ".."
- if (typeof noHeaderFooter === "undefined")  noHeaderFooter  = false
- if (typeof demoMode === "undefined")        demoMode        = false
- if (typeof wrapperSite   === "undefined") wrapperSite       = "l-wrapper--siteFull"
- if (typeof header === "undefined") header                   = false


doctype html
<!--[if IE 8]><html data-debug lang="fr" class="oldie ie8 no-js"><![endif]-->
<!--[if IE 9]><html data-debug lang="fr" class="oldie ie9 no-js"><![endif]-->
<!--[if !IE]><!-->
html(data-debug lang="fr" class="no-js")
  <!--<![endif]-->
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    meta(name="format-detection" content="telephone=no")
    meta(name='description' content=description)

    link(rel="canonical" href="http://google.com")



    //- App Banner
    //- meta(name="ios" content="app-id=1104269908")
    //- meta(name="android" content="app-id=com.engie.particuliers")

    // Open Graph
    meta(property="og:url" content="http://google.com")
    meta(property="og:type" content="website")
    meta(property="og:title" content="Your website title")
    meta(property="og:description" content="Your description")
    meta(property="og:image" content="http://essayspeechwala.com/wp-content/uploads/2016/03/Lion.jpg")

    title=title

    // COMMON
    link(rel="stylesheet" href="../css/common.css")
    //- link(rel="stylesheet" href="../css/tel.css")

    block CSS


    //- DEMO MODE
    if demoMode
      include demo-mode
    //- end - DEMO MODE

    // Fav and touch icons
    link(rel="apple-touch-icon-precomposed" sizes="144x144" href=localhostCommon+"/images/favicon/apple-touch-icon-144x144.png")
    link(rel="apple-touch-icon-precomposed" sizes="114x114" href=localhostCommon+"/images/favicon/apple-touch-icon-114x114.png")
    link(rel="apple-touch-icon-precomposed" sizes="72x72" href=localhostCommon+"/images/favicon/apple-touch-icon-72x72.png")
    link(rel="apple-touch-icon-precomposed" href=localhostCommon+"/images/favicon/apple-touch-icon-57x57.png")
    link(rel="shortcut icon" href=localhostCommon+"/images/favicon/favicon.ico")

    link(href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600;700&display=swap" rel="stylesheet")
    script(src="../js/haut/modernizr-custom.js")
    script(src="http://code.jquery.com/jquery-2.1.3.min.js")
    script(src="../js/haut/init.js")

    //- script.
    //-   E.bannerApp = {
    //-     iOS:     'app-id=1104269908',
    //-     Android: 'app-id=com.engie.particuliers'
    //-   }

  body(
    class=bodyClass
    class=theme
  )
    .l-wrapper#backToTop(class=wrapperSite)
      //- +bannerApp()

      if (header || !noHeaderFooter)
        //pour affichier le header non connect√© faut mettre le variable dropDown a false
        .c-siteHeader__mask 
        +siteHeaderV3

      main#siteContent.l-wrapper.l-wrapper--main.u-bg-white(role="main" data-e-sticky-container-main).l-wrapper--headerv3
        //------------------------
        //- Page content goes here
        //------------------------
        block content

        +backToTop()

      if (!noHeaderFooter)
        +siteFooterV2()

  // COMMON
  script(src="../js/bas/vendors.js")
  script(src="../js/bas/common.js")

  //- DEMO MODE
  if demoMode
    script(src="../js/bas/demo.js")
  //- end - DEMO MODE

  //---------------------------
  //- Scripts added at the
  //- bottom of the page
  //---------------------------
  block JS
