mixin demo(data)
  - var data = data || {}
  - var desc = data.desc || false

  - demoNbr++
  div(data-demo-html=demoNbr)&attributes(attributes)
    block

  .u-padding-t-20.u-padding-b-20.u-margin-t-20.u-margin-b-40.u-bg-black
    if desc
      .desc.u-padding-b-20.u-padding-h-20.u-color-white
        p <strong>Description : </strong>
        p!=desc
      +composantPage__caseDesc()

    .c-btnWrapper.u-theme-indigo.c-btnWrapper--fullOnMobile.u-theme-genBlue
      button(data-e-toggle='{"target": "'+demoNbr+'", "btnActiveClass": "is-close","contentOpenedClass": "is-opened"}' type="button").k-composantPage__caseHtmlButton.c-baseBtn.u-theme-bg.u-theme-bg-hover
