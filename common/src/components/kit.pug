  a(href!=caseLink data-e-scrollto={"offset": 77}).k-composantPage__menuCaseItem!=caseName
    block


mixin composantPage__caseDesc(data)
  - var data       = data || {}
  - var caseName   = data.caseName || ""
  - var caseUpdate = data.caseUpdate || ""
  - var caseSize   = data.caseSize || ""
  - var caseTheme  = data.caseTheme || ""
  - var caseDesc   = data.caseDesc || ""

  .u-padding-t-20.u-margin-b-20.k-composantPage__caseDesc
    .u-heading-3!=caseName
    if caseUpdate
      p.k-composantIndex__update Mis à jour le&nbsp;
        span!=caseUpdate
    .u-margin-t-20.k-composantPage__caseDescContent
      if caseSize
        p Taille de l’image :&nbsp;
          span.u-textBold!=caseSize
      if caseTheme
        p Thèmes compatibles :&nbsp;
          span.u-textBold!=caseTheme
      if caseDesc
        span!=caseDesc
  block

