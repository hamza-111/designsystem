mixin composantIndex(data)
  - var data       = data || {}
  - var devName    = data.devName || ""
  - var longName   = data.longName || ""
  - var text       = data.text || "Description succincte du composant, usage, page(s) concernée(s) ..."
  - var tags       = data.tags || "NC"
  - var update     = data.update || ": NC"
  - var link       = data.link || "#"

  .k-composantIndex
    .k-composantIndex__desc
      a(href=link).k-composantIndex__title.u-textBold!=devName
        br
        !=longName
      span.k-composantIndex__titleArrow &#9656;
      p.k-composantIndex__text.u-margin-t-20!=text
      p.k-composantIndex__text.u-margin-t-20
        strong Tags :&nbsp;
          !=tags
      p.k-composantIndex__update.u-margin-t-20 Mis à jour le&nbsp;
        !=update
    block


mixin composantIndex__img(data)
  - var data       = data || {}
  - var imgLink    = data.imgLink || "#"
  - var imgSrc     = data.imgSrc || "indexKit/logoStudio.png"

  .k-composantIndex__img(style='background-image:url(images/'+imgSrc+')')
    a(href=imgLink).k-composantIndex__img--hover
      .k-composantIndex__img--hoverLink Voir cas


