mixin pager(data)
  - var data = data || {}
  - var id = data.id || 'pager'

  // .c-pager
  nav.c-pager(role="navigation" aria-label="Pagination")
    ul.c-pager__list
      li.c-pager__page
        a.c-pager__link.c-pager__link--arrow(href="#" rel="prev" title="Page précédente")
          span.icon.icon-chevron-left

      li.c-pager__page
        a.c-pager__link(href="#") 1
      li.c-pager__page
        a.c-pager__link(href="#" rel="prev") 2
      li.c-pager__page
        p.c-pager__link.c-pager__link--current(aria-label="Page courante") 3
      li.c-pager__page
        a.c-pager__linkt(href="#" rel="next") 4
      li.c-pager__page
        a.c-pager__link(href="#") 5

      li.c-pager__page
        a.c-pager__link.c-pager__link--arrow(href="#" rel="next" title="Page suivante")
          span.icon.icon-chevron-right

    p.c-pager__total /15
  // end .c-pager


