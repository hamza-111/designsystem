mixin pagerBtnTpl(data)
  - var data = data || {}
  - var id = data.id || 'pager'

  //- avec templateEngine.js
  ul.c-pager__list
    | [% if (this.currentPage !== 1) { %]
    li.c-pager__page
      button.c-pager__link.c-pager__link--arrow(type="button" rel="prev" aria-label="Page précédente")
        span.icon.icon-chevron-left
    | [% } %]

    | [% for (var i = this.indexFirst; i <= this.indexLast; i++) { %]
    |   [% if (i === this.currentPage) { %]
    li.c-pager__page
      p.c-pager__link.c-pager__link--current(aria-label="Page courante") [% i %]
    |   [% } else { %]
    li.c-pager__page
      button.c-pager__link(type="button") [% i %]
    |   [% } %]
    | [% } %]

    | [% if (this.currentPage < this.numberOfPage) { %]
    li.c-pager__page
      button.c-pager__link.c-pager__link--arrow(type="button" rel="next" aria-label="Page suivante")
        span.icon.icon-chevron-right
    | [% } %]

  p.c-pager__total /[% this.numberOfPage %]