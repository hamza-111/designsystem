include blockLinksApps/blockLinksApps
include ../linkLongArrow/linkLongArrow

mixin blockLinks(data)
  - var data            = data || {}
  - var isDownloadFiles = data.isDownloadFiles || false
  - var bottomLinks     = data.bottomLinks || false
  - var appLinks        = data.appLinks || false
  - var fullWidth       = data.fullWidth || false
  - var classFullWidth  = fullWidth ? "c-blockLinks--full":  false
  - var minBreakPoint   = data.minBreakPoint || "large"

  // .c-blockLinks
  section.c-blockLinks.u-padding-spacer.l-wrapper--large.l-row(class=classFullWidth)
    if (isDownloadFiles)
      .c-blockLinks__wysiwyg(class=fullWidth?"":"l-col-medium-7")
        .c-wysiwyg
          p Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quaerat, aliquid itaque assumenda rem, nostrum doloremque eveniet similique quod quae quia dolore voluptatibus? Similique at totam minus ab doloribus, distinctio magnam?
